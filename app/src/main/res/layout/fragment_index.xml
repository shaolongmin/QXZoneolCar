<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.zoneol.qxcar.fragment.IndexFragment"
    android:background="@color/blank">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="@drawable/index_left_bg">

            <ImageView
                android:id="@+id/index_left_car"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:src="@drawable/index_left_car"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="60dp"
                />
            <RadioGroup
                android:id="@+id/index_left_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/index_left_car"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="@string/index_radio_left"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="@string/index_radio_right"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            </RadioGroup>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/index_left_radiogroup"
                android:layout_marginLeft="80dp"
                android:text="@string/index_query_history"/>

            <TextView
                android:id="@+id/index_txt_control_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_txt_control_temperature"
                android:textColor="@color/white"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/index_txt_control_tear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_txt_control_tear"
                android:textColor="@color/white"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="40dp"
                />

            <TextView
                android:id="@+id/index_txt_wheel_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_txt_wheel_height"
                android:textColor="@color/white"
                android:layout_marginLeft="225dp"
                android:layout_marginTop="70dp"
                />

            <TextView
                android:id="@+id/index_txt_wheel_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_txt_wheel_temperature"
                android:textColor="@color/white"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="100dp"
                />
            <TextView
                android:id="@+id/index_txt_slip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_txt_slip"
                android:textColor="@color/white"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="130dp"
                />

            <TextView
                android:id="@+id/index_txt_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_txt_pressure"
                android:textColor="@color/white"
                android:layout_marginLeft="265dp"
                android:layout_marginTop="155dp"
                />

            <TextView
                android:id="@+id/index_txt_door_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_txt_door_pressure"
                android:textColor="@color/white"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="185dp"
                />

            <TextView
                android:id="@+id/index_txt_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_txt_battery"
                android:textColor="@color/white"
                android:layout_marginLeft="225dp"
                android:layout_marginTop="210dp"
                />
            <TextView
                android:id="@+id/index_txt_motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_txt_motor"
                android:textColor="@color/white"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="235dp"
                />
            <TextView
                android:id="@+id/index_txt_wheel_motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_txt_wheel_motor"
                android:textColor="@color/white"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="260dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/index_right_contain"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2">

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
